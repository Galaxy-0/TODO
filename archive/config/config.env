# GalaxyAI Configuration
# 请设置您的OpenRouter API密钥

# OpenRouter API配置
OPENROUTER_API_KEY=    # 请在这里填入您的OpenRouter API密钥
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# 分析配置
DEFAULT_ANALYSIS_MODE=deep
MAX_CONTENT_LENGTH=5000
AUTO_REMOVE_FROM_INBOX=true

# 通知配置
ENABLE_NOTIFICATIONS=true
NOTIFICATION_SOUND=true

# 截图配置
SCREENSHOT_FORMAT=png
ENABLE_OCR=false
OCR_LANGUAGE=chi_sim+eng

# 成本控制
MONTHLY_API_BUDGET=50.00
COST_WARNING_THRESHOLD=0.80

# 调试配置
DEBUG_MODE=false
LOG_LEVEL=INFO