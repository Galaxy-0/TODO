# GalaxyAI Configuration Template
# 复制此文件为 config.env 并填入实际值

# OpenRouter API配置
OPENROUTER_API_KEY=your-openrouter-api-key-here
OPENROUTER_MODEL=anthropic/claude-3.5-sonnet

# 可选的其他模型：
# OPENROUTER_MODEL=anthropic/claude-3-haiku        # 更快，成本更低
# OPENROUTER_MODEL=anthropic/claude-3-opus         # 更强，成本更高
# OPENROUTER_MODEL=openai/gpt-4                    # OpenAI GPT-4
# OPENROUTER_MODEL=google/palm-2-chat-bison        # Google PaLM 2

# 分析配置
DEFAULT_ANALYSIS_MODE=deep    # deep | quick
MAX_CONTENT_LENGTH=5000       # 内容最大长度限制
AUTO_REMOVE_FROM_INBOX=true   # 分析后自动从收件箱移除

# 通知配置
ENABLE_NOTIFICATIONS=true     # 启用macOS通知
NOTIFICATION_SOUND=true       # 通知声音

# 截图配置
SCREENSHOT_FORMAT=png         # png | jpg
ENABLE_OCR=false             # 启用OCR（需要安装tesseract）
OCR_LANGUAGE=chi_sim+eng     # OCR语言设置

# 成本控制
MONTHLY_API_BUDGET=50.00     # 月度API预算（美元）
COST_WARNING_THRESHOLD=0.80  # 预算警告阈值（80%）

# 代理设置（如果需要）
# HTTP_PROXY=http://127.0.0.1:7890
# HTTPS_PROXY=http://127.0.0.1:7890

# 调试配置
DEBUG_MODE=false             # 启用调试模式
LOG_LEVEL=INFO               # DEBUG | INFO | WARNING | ERROR